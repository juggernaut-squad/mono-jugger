{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"jsx": "react",
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@api/app": ["apps/api/src/app"],
			"@api/app/*": ["apps/api/src/app/*"],
			"@client/app": ["apps/client/src/app"],
			"@client/app/*": ["apps/client/src/app/*"],
			"@client/mainLayout": ["apps/client/src/view/mainLayout"],
			"@client/mainLayout/*": ["apps/client/src/view/mainLayout/*"],
			"@client/organisms": ["apps/client/src/view/components/organisms"],
			"@client/organisms/*": ["apps/client/src/view/components/organisms/*"],
			"@client/pages": ["apps/client/src/view/pages"],
			"@client/pages/*": ["apps/client/src/view/pages/*"],
			"@client/routes": ["apps/client/src/view/routes"],
			"@client/routes/*": ["apps/client/src/view/routes/*"],
			"@client/store": ["apps/client/src/store"],
			"@client/store/*": ["apps/client/src/store/*"],
			"@client/view": ["apps/client/src/view"],
			"@client/view/*": ["apps/client/src/view/*"],
			"@jugger/ui": ["libs/ui/src/index.ts"],
			"@jugger/utils": ["libs/utils/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
